<Window x:Class="WpfWebshop.Shop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWebshop"
        mc:Ignorable="d"
        Title="Shop" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <Label Content="Inventory" HorizontalAlignment="Left" Margin="36,41,0,0" VerticalAlignment="Top"/>
        <Label Content="Products" HorizontalAlignment="Left" Margin="472,41,0,0" VerticalAlignment="Top"/>
        <Label x:Name="MoneyLabel" Content="Money left: €0" HorizontalAlignment="Left" Margin="76,354,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="InventoryListBox" HorizontalAlignment="Left" Height="263" Margin="36,72,0,0" VerticalAlignment="Top" Width="280"/>
        <ListBox x:Name="ProductsListBox" HorizontalAlignment="Left" Height="263" Margin="472,72,0,0" VerticalAlignment="Top" Width="280"/>
        <Button Content="Buy" HorizontalAlignment="Left" Margin="573,354,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Refresh" HorizontalAlignment="Left" Margin="681,354,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>

    </Grid>
</Window>
